<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPage"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.example.daisyling.ui.view.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_my" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_username"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_my_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grey_radius"
                android:padding="3dp"
                android:text="@string/my_vip_edit"
                android:textSize="11sp"
                tools:ignore="ContentDescription,SmallSp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_white_radius"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/my_download"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:drawableTopCompat="@drawable/ic_download"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/tv_my_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/my_favorite"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:drawableTopCompat="@drawable/ic_favorite" />

        <TextView
            android:id="@+id/tv_my_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/my_history"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:drawableTopCompat="@drawable/ic_history" />

        <TextView
            android:id="@+id/tv_my_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/my_play"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:drawableTopCompat="@drawable/ic_play" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_white_radius"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_my_cache"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <TextView
                android:id="@+id/tv_my_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/my_cache"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/img_my_cache"
                android:layout_width="@dimen/ic_arrow_forward_width"
                android:layout_height="@dimen/ic_arrow_forward_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_arrow_forward" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_app_version"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/my_app_version"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="@dimen/ic_arrow_forward_width"
                android:layout_height="@dimen/ic_arrow_forward_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_arrow_forward" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_logout"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <TextView
                android:id="@+id/tv_my_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/my_logout"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/img_my_logout"
                android:layout_width="@dimen/ic_arrow_forward_width"
                android:layout_height="@dimen/ic_arrow_forward_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_arrow_forward" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
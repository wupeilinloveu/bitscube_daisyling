<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.daisyling">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".common.base.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_daisyling"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_daisyling"
        android:supportsRtl="true"
        android:theme="@style/TranslucentTheme"
        tools:replace="android:name"
        tools:targetApi="n">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:theme="@style/MyTheme" />
        <activity android:name=".ui.activity.SearchActivity" />
        <activity android:name=".ui.activity.MusicActivity" />
        <activity android:name=".ui.activity.VideoActivity" />
        <activity android:name=".ui.activity.MyDownLoadActivity" />
        <activity android:name=".ui.activity.MyFavoriteActivity" />
        <activity android:name=".ui.activity.MyPlayActivity" />
        <activity android:name=".ui.activity.MyAppVersionActivity" />
        <activity android:name="com.example.local_music.ui.view.main.CommonMusicActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name="com.example.local_music.ui.view.main.setting.AboutActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name="com.example.local_music.ui.view.main.setting.FindSongActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name="com.example.local_music.ui.view.main.song.edit.SongEditActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name="com.example.local_music.ui.view.main.song.edit.SongsEditActivity"
            android:theme="@style/MyTheme"/>
        <activity android:name="com.example.local_music.ui.view.main.song.SongListActivity"
            android:theme="@style/MyTheme"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.daisyling.ui.activity.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/download_path" />
        </provider>
    </application>

</manifest>